/**
 * STYLE.GSS
 * Default application style
 */

html {
    font-size: 62.5%;
}

h1 {
    font-size: 1.8rem;

    margin-bottom: 1.5em;
}

ul {
    padding-left: 0;
}

h2 {
    font-size: 1.5rem;

    margin-bottom: 1em;
}

.content {
    width: 300px;
    margin: 0 auto;
    padding: 4em 0 2em;
}

.example {
    margin-bottom: 2em;
}

.example > div {
    margin-bottom: 1em;
}
