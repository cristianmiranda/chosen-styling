<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:chzn="urn:import:com.arcbees.chosen.client.gwt">

    <ui:with field="resources" type="com.arcbees.chosenstyling.client.resources.AppResources"/>

    <g:HTMLPanel styleName="{resources.style.content}">

        <h1>Chosen Styling</h1>

        <div class="{resources.style.example}">

            <h2>Default style</h2>

            <chzn:ChosenListBox placeholderText="Choose your character..." width="300px" ui:field="singleChosen">
                <g:item value=""></g:item>
                <g:item value="Darth Vader">Darth Vader</g:item>
                <g:item value="Luke Skywalker">Luke Skywalker</g:item>
                <g:item value="Princess Leia">Princess Leia</g:item>
                <g:item value="Boba Fett">Boba Fett</g:item>
            </chzn:ChosenListBox>

            <chzn:MultipleChosenValueListBox ui:field="multipleValues" width="300px"/>

        </div>

        <div class="{resources.style.example}">

            <h2>Dark style</h2>

            <chzn:ChosenListBox placeholderText="Choose your character..." width="300px" ui:field="singleChosenDark">
                <g:item value=""></g:item>
                <g:item value="Darth Vader">Darth Vader</g:item>
                <g:item value="Luke Skywalker">Luke Skywalker</g:item>
                <g:item value="Princess Leia">Princess Leia</g:item>
                <g:item value="Boba Fett">Boba Fett</g:item>
            </chzn:ChosenListBox>

            <chzn:MultipleChosenValueListBox ui:field="multipleValuesDark" width="300px"/>

        </div>

        <div class="{resources.style.example}">

            <h2>Unicorn style</h2>

            <chzn:ChosenListBox placeholderText="Choose your character..." width="300px" ui:field="singleChosenUnicorn">
                <g:item value=""></g:item>
                <g:item value="Darth Vader">Darth Vader</g:item>
                <g:item value="Luke Skywalker">Luke Skywalker</g:item>
                <g:item value="Princess Leia">Princess Leia</g:item>
                <g:item value="Boba Fett">Boba Fett</g:item>
            </chzn:ChosenListBox>

            <chzn:MultipleChosenValueListBox ui:field="multipleValuesUnicorn" width="300px"/>

        </div>


        <div class="{resources.style.example}">

            <h2>Tradeworks style</h2>

            <chzn:ChosenListBox placeholderText="Choose your character..." width="400px" ui:field="singleChosenTradeworks">
                <g:item value=""></g:item>
            </chzn:ChosenListBox>

        </div>

    </g:HTMLPanel>
</ui:UiBinder>
